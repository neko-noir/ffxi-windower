	<rules>
		<if Group="sub-war|sub-sam|12haste|scythe">
			<!-- ................................................................... -->
			<equip When="AfterCast|Engaged" Set="Idle" />
			<!-- ................................................................... -->
			<if Skill="DarkMagic">
				<equip When="PreCast" Set="FastCast" />
				<equip When="MidCast" Set="DarkMagic" />
				<if Spell="Absorb-TP">
					<equip When="Midcast">
						<hands>Bale Gauntlets +2</hands>
					</equip>
				</if>
				<if Spell="Dread Spikes">
					<equip When="MidCast" Set="dreadspikes" />
				</if>
			</if>
			<!-- ................................................................... -->
			<if Spell="Utsusemi*">
				<equip Set="FastCast" />
				<equip When="MidCast" Set="Haste" />
				<if Spell="*Ichi" Advanced='"$UtsusemiNi"="1"' BuffActive="Copy Image">
					<midcastdelay Delay="3.0" />
					<command When="MidCast">cancel 66</command>
					<var CMD="set UtsusemiNi 0" />
				</if>
				<elseif Spell="*Ni">
					<var CMD="set UtsusemiNi 1" />
				</elseif>
			</if>
			<!-- ................................................................... -->
			<elseif Spell="Invisible" SpellTargetType="Self">
				<if SubJob="NIN">
					<if SLvlLT="34">
						<changespell Spell="Tonko: Ichi" />
					</if>
					<else>
						<changespell Spell="Tonko: Ni" />
					</else>
				</if>
				<elseif SubJob="DNC">
					<if BuffActive="Sneak">
						<command>cancel 71</command>
					</if>
					<changespell Spell="Spectral Jig" />
				</elseif>
			</elseif>
			<!-- ................................................................... -->
			<elseif Spell="Sneak" SpellTargetType="Self">
				<if BuffActive="Sneak">
					<command>cancel 71</command>
				</if>
				<if SubJob="NIN">
					<changespell Spell="Monomi: Ichi" />
				</if>
				<elseif SubJob="DNC">
					<changespell Spell="Spectral Jig" />
				</elseif>
			</elseif>
			<!-- ................................................................... -->
			<elseif Spell="Resolution|Upheaval">
				<equip Set="MultiSTR">
					<neck>Breeze Gorget</neck>
					<waist>Breeze Belt</waist>
				</equip>
			</elseif>
			<elseif Spell="Scourge">
				<equip Set="MNDCHR">
					<neck>Light Gorget</neck>
					<waist>Light Belt</waist>
				</equip>
			</elseif>
			<elseif Spell="Guillotine|Sickle Moon">
				<equip Set="MultiSTR" />
			</elseif>
			<elseif Spell="Insurgency">
				<equip Set="STRINT" />
			</elseif>
			<elseif Spell="Raging Rush|Vorpal Blade">
				<equip Set="MulticritSTR" />
			</elseif>
			<elseif Spell="Fell Cleave|Ground Strike|Spinning Slash">
				<equip Set="SingleSTR">
					<neck>Breeze Gorget</neck>
					<waist>Breeze Belt</waist>
				</equip>
			</elseif>
			<elseif Spell="Spiral Hell|Cross Reaper|Vorpal Scythe|Spinning Scythe|Nightmare Scythe|Slice|Cresent Moon|Power Slash|Hard Slash">
				<equip Set="SingleSTR">
				</equip>
			</elseif>
			<elseif Spell="Infernal Scythe|Nightmare Scythe|Dark Harvest|Herculean Slash|Freezebite|Frostbite">
				<equip Set="MagAttackWS">
				</equip>
			</elseif>
			<!-- ................................................................... -->
			<elseif Spell="Weapon Bash">
				<equip>
					<hands>Chaos Gauntlets +1</hands>
				</equip>
			</elseif>
			<elseif Spell="Last Resort">
				<equip>
					<feet>Abs. Sollerets +2</feet>
				</equip>
			</elseif>
			<elseif Spell="Diabolic Eye">
				<equip>
					<hands>Abs. Gauntlets +2</hands>
				</equip>
			</elseif>
			<elseif Spell="Nether Void">
