	<variables>
		<var Name="UtsusemiNi">0</var>
	</variables>
	<rules>
		<if Group="Dagger">
			<!-- ................................................................... -->
			<if Spell="Utsusemi*">
				<equip Set="FastCast" />
				<equip When="MidCast" Set="Haste" />
				<if Spell="*Ichi" Advanced='"$UtsusemiNi"="1"' BuffActive="Copy Image">
					<midcastdelay Delay="3.0" />
					<command When="MidCast">cancel 66</command>
					<var CMD="set UtsusemiNi 0" />
				</if>
				<elseif Spell="*Ni">
					<var CMD="set UtsusemiNi 1" />
				<equip When="Aftercast" Set="Idle" />
				</elseif>
			</if>
			<!-- ................................................................... -->
			<elseif Spell="Invisible" SpellTargetType="Self">
				<if SubJob="NIN">
					<if SLvlLT="34">
						<changespell Spell="Tonko: Ichi" />
					</if>
					<else>
						<changespell Spell="Tonko: Ni" />
					</else>
				</if>
				<elseif SubJob="DNC">
					<if BuffActive="Sneak">
						<command>cancel 71</command>
					</if>
					<changespell Spell="Spectral Jig" />
				</elseif>
			</elseif>
			<!-- ................................................................... -->
			<elseif Spell="Sneak" SpellTargetType="Self">
				<if BuffActive="Sneak">
					<command>cancel 71</command>
				</if>
				<if SubJob="NIN">
					<changespell Spell="Monomi: Ichi" />
				</if>
				<elseif SubJob="DNC">
					<changespell Spell="Spectral Jig" />
				</elseif>
			</elseif>
			<!-- ................................................................... -->
			<elseif Spell="Evisceration">
				<equip Set="MultiCritDEX" />
				<equip When="Aftercast" Set="Idle" />
			</elseif>
			<elseif Spell="Exenterator">
				<equip Set="MultiAGI" />
				<equip When="Aftercast" Set="Idle" />
			</elseif>
			<elseif Spell="Mandalic Stab|Shark Bite|Dancing Edge|Viper Bite|Wasp Sting">
				<equip Set="singleDEX" />
				<equip When="Aftercast" Set="Idle" />
			</elseif>
			<elseif Spell="Aeolian Edge|Energy Drain|Energy Steal|Cyclone|Gust Slash">
				<equip Set="MagicAttackWS" />
				<equip When="Aftercast" Set="Idle" />
			</elseif>
			<!-- ................................................................... -->
			<elseif Spell="Despoil">
				<equip>
					<legs>Raid. Culottes +2</legs>
					<feet>Raid. Poulaines +2</feet>
				</equip>
				<equip When="Aftercast" Set="Idle" />
			</elseif>
			<elseif Spell="Accomplice|Collaborator">
				<equip Set="Enmity">
					<head>Raid. Bonnet +2</head>
				</equip>
				<equip When="Aftercast" Set="Idle" />			
			</elseif>	
			<elseif Spell="Assassin's Charge">
				<equip>
					<feet>Asn. Poulaines +2</feet>
				</equip>
			</elseif>			
			<elseif Spell="Sneak Attack">
				<equip Set="SneakAttack" />
			</elseif>
			<elseif Spell="Trick Attack">
				<equip Set="TrickAttack" />
			</elseif>
		</if>
	</rules>
</spellcast>
