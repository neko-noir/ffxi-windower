	<variables>
		<var Name="FireAccuracy">Chatoyant Staff</var>
		<var Name="IceAccuracy">Vourukasha I</var>
		<var Name="WindAccuracy">ChatoyantStaff</var>
		<var Name="EarthAccuracy">Chatoyant Staff</var>
		<var Name="ThunderAccuracy">Chatoyant Staff</var>
		<var Name="WaterAccuracy">Chatoyant Staff</var>
		<var Name="LightAccuracy">Chatoyant Staff</var>
		<var Name="DarkAccuracy">Chatoyant Staff</var>

		<var Name="FireDamage">Chatoyant Staff</var>
		<var Name="IceDamage">Vourukasha I</var>
		<var Name="WindDamage">Chatoyant Staff</var>
		<var Name="EarthDamage">Chatoyant Staff</var>
		<var Name="ThunderDamage">Chatoyant Staff</var>
		<var Name="WaterDamage">Chatoyant Staff</var>
		<var Name="LightDamage">Chatoyant Staff</var>
		<var Name="DarkDamage">Chatoyant Staff</var>

		<var Name="HaveFireObi">0</var>
		<var Name="HaveIceObi">1</var>
		<var Name="HaveWindObi">0</var>
		<var Name="HaveEarthObi">0</var>
		<var Name="HaveThunderObi">1</var>
		<var Name="HaveWaterObi">0</var>
		<var Name="HaveLightObi">0</var>
		<var Name="HaveDarkObi">1</var>

		<var Name="FireObi">Karin Obi</var>
		<var Name="IceObi">Hyorin Obi</var>
		<var Name="WindObi">Furin Obi</var>
		<var Name="EarthObi">Dorin Obi</var>
		<var Name="ThunderObi">Rairin Obi</var>
		<var Name="WaterObi">Suirin Obi</var>
		<var Name="LightObi">Korin Obi</var>
		<var Name="DarkObi">Anrin Obi</var>

		<var Name="UtsusemiNi">0</var>
	</variables>
	<rules>
		<!-- ................................................................... -->
		<equip When="Idle|AfterCast" Set="RefreshStanding" />
		<equip When="Resting" Set="hMP" />
		<!-- ................................................................... -->
		<if CommandPrefix="/magic|/ninjutsu">
			<equip Set="FastCast" />
			<if Skill="ElementalMagic">
				<equip>
					<main>$%spellelementDamage</main>
				</equip>
			</if>
			<else>
				<equip>
					<main>$%spellelementAccuracy</main>
				</equip>
			</else>
		</if>
		<!-- ................................................................... -->
		<if Skill="DarkMagic">
			<if Spell="Aspir*|Bio*|Drain*">
				<equip When="MidCast" Set="DarkMagic-Skill" />
			</if>
			<if Spell="Stun">
				<equip When="MidCast" Set="DarkMagic-Stun" />
			</if>
		</if>
		<!-- ................................................................... -->
		<elseif Skill="ElementalMagic">
				<equip When="MidCast" Set="MagicAttack" />
		</elseif>
		<!-- ................................................................... -->
		<elseif Skill="EnfeeblingMagic">
			<if Spell="Paralyze|Slow|Silence|Addle">
				<equip When="MidCast" Set="Enfeeble-MND" />
			</if>
			<else>
				<equip When="MidCast" Set="Enfeeble-INT" />
			</else>
		</elseif>
		<!-- ................................................................... -->		
		<elseif Skill="EnhancingMagic">
			<if Spell="Haste|Refresh|Adloquium|Animus*|Blink|Regen*|Prot*|Shel*|Invisible">
				<equip When="Midcast" Set="Conserve-MP" />
			</if>
			<if spell="*storm">
				<equip When="MidCast" Set="Conserve-MP">
					<feet>Argute Loafers +2</feet>
				</equip>
			</if>
			<if spell="Rege*">
				<equip When="MidCast" Set="Conserve-MP">
					<head>Svnt. Bonnet +2</head>
				</equip>
			</if>
			<elseif Spell="Bar*|Aquaveil|Phalanx|En*|Embrava">
				<equip When="MidCast" Set="Enhancing-Skill" />
			</elseif>
			<elseif Spell="Sneak" SpellTargetType="Self" BuffActive="Sneak">
				<midcastdelay Delay="1" />
				<command When="MidCast">cancel 71</command>
			</elseif>
			<elseif Spell="Stoneskin">
				<equip When="MidCast" Set="Enhancing-Skill" />
				<if BuffActive="Stoneskin">
					<midcastdelay Delay="4.5" />
					<command When="MidCast">cancel 37</command>
				</if>
			</elseif>
		</elseif>
		<!-- ................................................................... -->
		<elseif Skill="HealingMagic">
			<if Spell="Cur*">
				<equip When="MidCast" Set="Cure" />
			</if>
		</elseif>
		<!-- ................................................................... -->
		<elseif Skill="Ninjutsu">
			<if Spell="Utsusemi*">
				<equip set="FastCast" />
				<equip When="MidCast" Set="Haste" />
				<if Spell="*Ichi" Advanced='"$UtsusemiNi"="1"' BuffActive="Copy Image">
					<midcastdelay Delay="3.0" />
					<command When="MidCast">cancel 66</command>
					<var CMD="set UtsusemiNi 0" />
				</if>
				<elseif Spell="*Ni">
					<var CMD="set UtsusemiNi 1" />
				</elseif>
			</if>
		</elseif>
		<!-- ................................................................... -->
		<if Spell="Perpetuance">
			<equip>
				<hands>Svnt. Bracers +2</hands>
			</equip>
		</if>
		<if Spell="Enlightenment">
			<equip>
				<body>Argute Gown +2</body>
			</equip>
		</if>
		<if Spell="Sublimation">
			<equip Set="Sublimation" />
		</if>
		<if Spell="Addendum: White|Addendum: Black">
			<equip>
				<body>Savant's Gown +2</body>
			</equip>
		</if>
		<!-- ................................................................... -->
		<if Advanced='"%SpellElement"="%WeatherElement" OR "%SpellElement"="%DayElement" AND "$Have%spellElementObi"="1"' Element="Fire|Ice|Wind|Earth|Thunder|Water|Light|Dark">
			<equip When="MidCast">
				<waist>$%SpellElementObi</waist>
				<back>Twilight Cape</back>
			</equip>
		</if>
	</rules>
</spellcast>