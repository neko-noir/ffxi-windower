	<rules>
		<if Group="GreatAxe">
			<!-- ................................................................... -->
			<if buffactive="Restraint">
				<equip When="AfterCast|Engaged" Set="IdleRestraint" />
			</if>
			<elseif buffnotactive="Restraint">
				<equip When="AfterCast|Engaged" Set="Idle" />
			</elseif>
			<!-- ................................................................... -->
			<if Spell="Utsusemi*">
				<equip Set="FastCast" />
				<equip When="MidCast" Set="Haste" />
				<if Spell="*Ichi" Advanced='"$UtsusemiNi"="1"' BuffActive="Copy Image">
					<midcastdelay Delay="3.0" />
					<command When="MidCast">cancel 66</command>
					<var CMD="set UtsusemiNi 0" />
				</if>
				<elseif Spell="*Ni">
					<var CMD="set UtsusemiNi 1" />
				</elseif>
			</if>
			<!-- ................................................................... -->
			<elseif Spell="Invisible" SpellTargetType="Self">
				<if SubJob="NIN">
					<if SLvlLT="34">
						<changespell Spell="Tonko: Ichi" />
					</if>
					<else>
						<changespell Spell="Tonko: Ni" />
					</else>
				</if>
				<elseif SubJob="DNC">
					<if BuffActive="Sneak">
						<command>cancel 71</command>
					</if>
					<changespell Spell="Spectral Jig" />
				</elseif>
			</elseif>
			<!-- ................................................................... -->
			<elseif Spell="Sneak" SpellTargetType="Self">
				<if BuffActive="Sneak">
					<command>cancel 71</command>
				</if>
				<if SubJob="NIN">
					<changespell Spell="Monomi: Ichi" />
				</if>
				<elseif SubJob="DNC">
					<changespell Spell="Spectral Jig" />
				</elseif>
			</elseif>
			<!-- ................................................................... -->
			<elseif Spell="Raging Rush|Vorpal Blade|Rampage">
				<equip Set="MultiCritSTR" />
			</elseif>
			<elseif Spell="Resolution">
				<equip Set="MultiSTR">
					<neck>Breeze Gorget</neck>
					<waist>Breeze Belt</waist>
				</equip>
			</elseif>
			<elseif Spell="Scourge">
				<equip Set="MNDCHR">
					<neck>Light Gorget</neck>
					<waist>Light Belt</waist>
				</equip>
			</elseif>
			<elseif Spell="Evisceration">
				<equip Set="MultiCritDEX" />
			</elseif>
			<elseif Spell="King's Justice|Impulse Drive">
				<equip Set="MultiSTR" />
			</elseif>
			<elseif Spell="Penta Thrust">
				<equip Set="MultiSTRDEX" />
			</elseif>
			<elseif Spell="Stardiver">
				<equip Set="MultiSTR">
				</equip>
			</elseif>
			<elseif Spell="Upheaval">
				<equip Set="MultiVIT">
				</equip>
			</elseif>
			<elseif Spell="True Strike">
				<equip Set="SingleCritSTR">
					<neck>Breeze Gorget</neck>
					<waist>Breeze Belt</waist>
				</equip>
			</elseif>
			<elseif Spell="Fell Cleave|Ground Strike">
				<equip Set="SingleSTR">
